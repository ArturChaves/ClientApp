<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientApp.Views.EditClientPage"
             Title="Edit Client"
             BackgroundColor="#F5F7FA">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="18">

            <Label Text="Edit Client"
                   FontSize="30"
                   FontAttributes="Bold"
                   TextColor="#002554"
                   HorizontalOptions="Center" />

            <Border Stroke="#CCCCCC" StrokeShape="RoundRectangle 10" BackgroundColor="White" Padding="10">
                <Entry Placeholder="First Name"
                       Text="{Binding Name}"
                       BackgroundColor="Transparent"
                       PlaceholderColor="#888"
                       TextColor="#222" />
            </Border>

            <Border Stroke="#CCCCCC" StrokeShape="RoundRectangle 10" BackgroundColor="White" Padding="10">
                <Entry Placeholder="Last Name"
                       Text="{Binding Lastname}"
                       BackgroundColor="Transparent"
                       PlaceholderColor="#888"
                       TextColor="#222" />
            </Border>

            <Border Stroke="#CCCCCC" StrokeShape="RoundRectangle 10" BackgroundColor="White" Padding="10">
                <Entry Placeholder="Age"
                       Keyboard="Numeric"
                       Text="{Binding Age}"
                       BackgroundColor="Transparent"
                       PlaceholderColor="#888"
                       TextColor="#222" />
            </Border>

            <Border Stroke="#CCCCCC" StrokeShape="RoundRectangle 10" BackgroundColor="White" Padding="10">
                <Entry Placeholder="Address"
                       Text="{Binding Address}"
                       BackgroundColor="Transparent"
                       PlaceholderColor="#888"
                       TextColor="#222" />
            </Border>

            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center" Margin="0,20,0,0">
                <Button Text="💾 Save Changes"
                        Command="{Binding SaveCommand}"
                        BackgroundColor="#005BBB"
                        TextColor="White"
                        WidthRequest="150"
                        CornerRadius="10" />

                <Button Text="✖ Cancel"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="#CCCCCC"
                        TextColor="Black"
                        WidthRequest="120"
                        CornerRadius="10" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
