<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientApp.Views.AddClientPage"
             Title="Add New Client">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Add New Client" FontSize="28" HorizontalOptions="Center" />

            <Entry Placeholder="First Name" Text="{Binding Name}" />
            <Entry Placeholder="Last Name" Text="{Binding Lastname}" />
            <Entry Placeholder="Age" Keyboard="Numeric" Text="{Binding Age}" />
            <Entry Placeholder="Address" Text="{Binding Address}" />

            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                <Button Text="Save" Command="{Binding SaveCommand}" />
                <Button Text="Cancel" Command="{Binding CancelCommand}" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
